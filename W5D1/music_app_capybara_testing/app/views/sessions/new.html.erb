<h2>Log In!</h2>

<ul class="errors">
<% flash[:errors].try(:each) do |err| %>
  <li><%= err %></li>
<% end %>
</ul>


<form action="<%= session_url %>" method="post">
  <%= auth_token %>

  <label>Email
    <input type="text" name="user[email]">
  </label>

  <label>Password
    <input type="password" name="user[password]">
  </label>

  <input class="button" type="submit" value="Log In">
</form>
