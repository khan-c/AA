<h2>Add an album</h2>

<ul><% flash[:errors].try(:each) do |err| %>
  <li><%= err %></li>
<% end %></ul>

<form action="<%= albums_url %>" method="post">
  <%= auth_token %>

  <label>Title
    <input type="text" name="album[title]" value="<%= @album.title %>">
  </label>

  <label class="select">Band
    <select class="" name="album[band_id]">
      <option disabled selected >-- Band --</option>
      <% @bands.each do |band| %>
        <option value="<%= band.id %>" <%= @album.band_id ? "selected" : "" %>><%= band.name %></option>
      <% end %>
    </select>
  </label>

  <div class="recording">
    <label>Live
      <input type="radio" name="album[live]" value="1" <%= @album.live ? "checked" : "" %>>
    </label>
    <label>Studio
      <input type="radio" name="album[live]" value="<%= @album.live %>" <%= @album.live ? "" : "checked" %>>
    </label>
  </div>

  <label>Year
    <input type="number" name="album[year]" value="<%= @album.year %>">
  </label>

  <input class="button" type="submit" name="" value="Add Album">
</form>
